{
  "name": "stremio-ratings-wrapper",
  "version": "1.0.0",
  "description": "A Stremio addon wrapper that injects IMDb ratings into catalog metadata",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "load-test": "node load-test.js",
    "load-test:short": "TEST_DURATION=60 node load-test.js",
    "load-test:local": "TEST_URL=http://localhost:7000 node load-test.js",
    "postinstall": "npm install --prefix imdb-ratings-api"
  },
  "keywords": [
    "stremio",
    "addon",
    "wrapper",
    "ratings",
    "imdb"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "express": "^4.18.2",
    "ioredis": "^5.3.2",
    "prom-client": "^15.1.3",
    "stremio-addon-sdk": "^1.6.10"
  },
  "devDependencies": {
    "autocannon": "^7.15.0",
    "chalk": "^4.1.2",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": "20.x"
  }
}
